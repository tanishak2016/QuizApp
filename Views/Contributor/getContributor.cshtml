@model Quiz_App.Models.contributor

<div class="table-responsive" style="border-style:groove; border-color: red;text-align:center">

    <div class="btn-group" style="background-image: url('/images/img1.jpg');height:25%;">
        @*<a href="#" class="btn btn-primary">Download</a>
            <a href="#" class="btn btn-default">Mirror</a>*@
        <form asp-action="normalAdminSaveUpdate">
            <input type="submit" value="Create Contributor" formaction="normalAdminSaveUpdate" class="btn btn-bd-primary" />
            <input type="submit" value="Logout" formaction="normalAdminLogout" class="btn btn-default">
        </form>
    </div><br />


    <table class="table table-striped table-bordered table-hover table-condensed table-dark" style="margin-top:2%">
        <thead>
            <tr style="background-color:red">
                <th scope="col">Contributor ID</th>
                <th scope="col">Full Name</th>
                <th scope="col">Address</th>
                <th scope="col">Mobile No</th>
                <th scope="col">Email Id</th>
                <th scope="col">User Name</th>
                <th scope="col">Password</th>
                <th scope="col">Contributor CreatedBy</th>
                <th scope="col">Admin Location</th>
                <th scope="col">Date Created</th>
                <th scope="col">Date Modified</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (System.Data.DataRow dr in ViewBag.contributor.Rows)
                {
                    <tr class="active">
                        <td>@dr["contributorId"]</td>
                        <td>@dr["fullName"]</td>
                        <td>@dr["address"]</td>
                        <td>@dr["mobileNo"]</td>
                        <td>@dr["emailId"]</td>
                        <td>@dr["userName"]</td>
                        <td>@dr["password"]</td>
                        <td>@dr["contributor_createdBy"]</td>
                        <td>@dr["adminLocation"]</td>
                        <td>@dr["dateCreated"]</td>
                        <td>@dr["dateModified"]</td>
                        <td>
                            <a href="/Contributor/updateContributor?id=@dr["contributorId"]" style="color:aqua">Update</a>|
                            <a href="/Contributor/deleteContributor?id=@dr["contributorId"]" style="color:red">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
@{
    if (TempData["msg"] != null)
    {
        <script>
                    alert('@TempData["msg"] ');
        </script>
    }
}

