@model Quiz_App.Models.contributor

@{
    ViewData["Title"] = "updateContributor";
}

<div class="container">
    <div class="col-md-6 mx-auto text-center">
        <div class="header-title">
            <h1 class="wv-heading--title" style="background-color:red;color:white">
                Update Contributor
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6 mx-auto" style="text-align: center; background-image: url('/assets/images/carousel/img3.jpg'); border-style: dashed; border-color: red">
            <div class="myform form ">
                <form asp-action="updateContributor">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        @*<label asp-for="contributorId" class="control-label"></label>*@
                        <input asp-for="contributorId" type="text" readonly="readonly" class="form-control disabled" style="width:50%;height:20%" />
                        <span asp-validation-for="contributorId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<label asp-for="fullName" class="control-label"></label>*@
                        <input asp-for="fullName" type="text" class="form-control" style="width:50%;height:20%;background-color:white" />
                        <span asp-validation-for="fullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<label asp-for="address" class="control-label"></label>*@
                        <input asp-for="address" type="text" class="form-control" style="width:50%;height:20%;background-color:white" />
                        <span asp-validation-for="address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<label asp-for="mobileNo" class="control-label"></label>*@
                        <input asp-for="mobileNo" type="text" class="form-control" style="width:50%;height:20%;background-color:white" />
                        <span asp-validation-for="mobileNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<label asp-for="emailId" class="control-label"></label>*@
                        <input asp-for="emailId" type="text" class="form-control" style="width:50%;height:20%;background-color:white" />
                        <span asp-validation-for="emailId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<label asp-for="userName" class="control-label"></label>*@
                        <input asp-for="userName" type="text" class="form-control" style="width:50%;height:20%;background-color:white" />
                        <span asp-validation-for="userName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<label asp-for="password" class="control-label"></label>*@
                        <input asp-for="password" type="text" class="form-control" style="width:50%;height:20%;background-color:white" />
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<label asp-for="contributor_createdBy" class="control-label"></label>*@
                        <input asp-for="contributor_createdBy" type="text" class="form-control" style="width:50%;height:20%;background-color:white" />
                        <span asp-validation-for="contributor_createdBy" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<label asp-for="adminLocation" class="control-label"></label>*@
                        <input asp-for="adminLocation" type="text" class="form-control" style="width:50%;height:20%;background-color:white" />
                        <span asp-validation-for="adminLocation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" formaction="updateContributor" class="btn btn-primary" />
                        <input type="submit" value="Cancel" formaction="getContributorData" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
